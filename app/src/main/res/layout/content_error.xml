<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_error"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/alert_content_icon_size"
        android:layout_height="@dimen/alert_content_icon_size"
        android:src="@drawable/red_card"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Something wrong"
        android:textColor="@color/alert_content"
        android:textSize="@dimen/alert_content_text_size"/>

</LinearLayout>